<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
  <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
  
  <!--Google font-->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Cabin:ital@0;1&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="./styles/style.css">
  <script>
    // use ajax to catch click then send post to backend
    $(document).ready(function(){
    $('#submitbtn').click(function(){
      alert('button clicked')
      var data = { username : $('input[name=username]').val(), password: $('input[name=password]').val()}; 
      console.log(data)
      $.ajax({
        type:'post',
        data:data,
        url:'/login',
        error:function(){
          console.log("this is data");
        },
        success:function(response){
          console.log("click success")
        }
      })
    })
  })
  </script>
  <style>
    .form-control{
      width:150px
    }
  </style>
</head>
<body>
  <header>
    <nav>
        <ul>
            <li><a href="/">Main page</a></li>
            <li><a href="posts">New post</a></li>
            <li><a class="active" href="#">Login</a></li>
        </ul>
    </nav>
</header>

  <main>
  <div class="container">
    <form method="post"><!--action="/login"-->
      <div class="form-group">
        <label for="username">Username</label>
        <input name="username" class="form-control" id="username" placeholder="username">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
      </div>
      <button type="submit" class="btn btn-login" id="submitbtn">submit</button>
    </form>
  </div>
</body>
</main>

<footer>
  <section class="footer">
      <div class="logo">
          <h1>Simple Message Board</h1>
      </div>
</section>
</footer>

</html>